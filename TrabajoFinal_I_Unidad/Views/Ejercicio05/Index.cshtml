
@{
    ViewBag.Title = "Index";
}

<h2>Ejercicio 05</h2>

<div class="row">
    <div class="col-lg-6">
        <form id="frmTriangulo">
            <div class="form-group">
                <label>Filas:</label>
                <input type="number" class="form-control text-center" placeholder="Ingrese cantidad de filas" name="Cantidad">
            </div>
            <div class="form-group">
                <label>Resultado:</label>
                <p id="Resultado"></p>
            </div>
            <button type="button" id="btnRetirar" class="btn btn-primary">Retirar</button>
        </form>
    </div>
</div>

@section js{

    <script>

        $(document).ready(function () {
            $(document).on('click', '#btnRetirar', function () {
                const data = $("#frmTriangulo").serializeFormJSON();
                if (data.Cantidad === "") {
                    alert("Ingrese un valor valido");
                    return false;
                }
                $.ajax({
                    url: "/Ejercicio05/CalcularTriangulo",
                    type: 'POST',
                    data: data,
                    success: function (response) {
                        let { data } = response;
                        //$("#Resultado").val(data);
                        document.getElementById("Resultado").innerHTML = data;
                    }
                });
            });
        });

    </script>

}
